<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/icon_bottombar_bg">
    <!--BT Connected layout-->
    <LinearLayout
        android:id="@+id/tab_bt_connected_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:visibility="gone">

        <ImageView
            android:id="@+id/iv_list_tab_keyboard"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/selector_bottombar_tab_common_highlight"
            android:src="@drawable/selector_bottombar_tab_dialpad" />

        <View
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:background="@drawable/icon_bottombar_line" />

        <ImageView
            android:id="@+id/iv_list_tab_contracts"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/selector_bottombar_tab_common_highlight"
            android:src="@drawable/selector_bottombar_tab_contracts" />

        <View
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:background="@drawable/icon_bottombar_line" />

        <ImageView
            android:id="@+id/iv_list_tab_callrecord"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/selector_bottombar_tab_common_highlight"
            android:src="@drawable/selector_bottombar_tab_calllog" />

        <View
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:background="@drawable/icon_bottombar_line" />

        <ImageView
            android:id="@+id/iv_list_tab_music"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/selector_bottombar_tab_common_highlight"
            android:src="@drawable/selector_bottombar_tab_music" />

        <View
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:background="@drawable/icon_bottombar_line" />

        <ImageView
            android:id="@+id/iv_list_tab_settings"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/selector_bottombar_tab_common_highlight"
            android:src="@drawable/selector_bottombar_tab_settings" />
    </LinearLayout>

    <!--BT Disconnected layout-->
    <LinearLayout
        android:id="@+id/tab_bt_disconnected_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_list_tab_history"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/selector_bottombar_tab_common_highlight"
            android:src="@drawable/selector_bottombar_tab_device_list" />

        <View
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:background="@drawable/icon_bottombar_line" />

        <ImageView
            android:id="@+id/iv_list_tab_settings2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/selector_bottombar_tab_common_highlight"
            android:src="@drawable/selector_bottombar_tab_settings_gray" />
    </LinearLayout>
</RelativeLayout>