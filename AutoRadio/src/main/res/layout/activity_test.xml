<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


        <Button
            android:id="@+id/btn_enter_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/btn_enter_list_text"
            android:textSize="22sp" />

        <Button
            android:id="@+id/btn_batch_add_fm_channel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/btn_batch_add_fm_channel_text"
            android:textSize="22sp" />

        <Button
            android:id="@+id/btn_batch_add_am_channel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/btn_batch_add_am_channel_text"
            android:textSize="22sp" />

        <Button
            android:id="@+id/btn_favorite_fm_channel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/btn_favorite_fm_channel_text"
            android:textSize="22sp" />

        <Button
            android:id="@+id/btn_favorite_am_channel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/btn_favorite_am_channel_text"
            android:textSize="22sp" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_info2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/btn_del_full_search_fm_channel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/btn_del_full_search_fm_channel_text"
            android:textSize="22sp" />

        <Button
            android:id="@+id/btn_del_full_search_am_channel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/btn_del_full_search_am_channel_text"
            android:textSize="22sp" />

        <Button
            android:id="@+id/btn_del_favorite_fm_channel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/btn_del_favorite_fm_channel_text"
            android:textSize="22sp" />

        <Button
            android:id="@+id/btn_del_favorite_am_channel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/btn_del_favorite_am_channel"
            android:textSize="22sp" />

        <Button
            android:id="@+id/btn_del_all_full_search"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/btn_del_all_full_search_text"
            android:textSize="22sp" />

        <Button
            android:id="@+id/btn_del_all_favorite"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/btn_del_all_favorite_text"
            android:textSize="22sp" />
    </LinearLayout>


</LinearLayout>