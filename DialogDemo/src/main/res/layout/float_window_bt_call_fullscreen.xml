<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/fullscreen_float_window_call_details_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:visibility="visible">

        <TextView
            android:id="@+id/tv_phone_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="@android:string/unknownName"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/tv_phone_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_phone_name"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="70px"
            android:text="@android:string/unknownName"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/tv_phone_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_phone_number"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="70px"
            android:text="@android:string/unknownName"
            android:textSize="26sp" />

        <Chronometer
            android:id="@+id/tv_phone_timer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_phone_status"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10px"
            android:format="%s"
            android:text="@string/time_text"
            android:textSize="22sp" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="70px"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/ib_pickup"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="21dp"
            android:background="@drawable/selector_keyboard_btn_bg_selector"
            android:src="@drawable/icon_fullscreen_call_hangup"
            android:visibility="gone" />

        <ImageButton
            android:id="@+id/ib_hungup"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:background="@drawable/selector_keyboard_btn_bg_selector"
            android:src="@drawable/icon_fullscreen_call_answer" />

        <ImageButton
            android:id="@+id/ib_mic"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="21dp"
            android:layout_marginRight="21dp"
            android:background="@drawable/selector_keyboard_btn_bg_selector"
            android:src="@drawable/icon_fullscreen_call_mic" />

        <ImageButton
            android:id="@+id/ib_dialpad_switch"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="21dp"
            android:background="@drawable/selector_keyboard_btn_bg_selector"
            android:src="@drawable/icon_fullscreen_call_keyboard" />

        <ImageButton
            android:id="@+id/ib_audio_mode"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:background="@drawable/selector_keyboard_btn_bg_selector"
            android:src="@drawable/icon_fullscreen_call_car" />
    </LinearLayout>

</RelativeLayout>