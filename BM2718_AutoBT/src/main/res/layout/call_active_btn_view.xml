<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageButton
        android:id="@+id/ibActiveHangup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/btn_call_bg_selector"
        android:src="@drawable/icon_call_hangup"/>

    <ImageButton
        android:id="@+id/ibActiveMute"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="21dp"
        android:background="@drawable/btn_call_bg_selector"
        android:src="@drawable/icon_call_mic_mute"/>

    <ImageButton
        android:id="@+id/ibActiveKeyboard"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="21dp"
        android:background="@drawable/btn_call_bg_selector"
        android:src="@drawable/icon_call_keyboard"/>

    <ImageButton
        android:id="@+id/ibActiveAudioStream"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="21dp"
        android:background="@drawable/btn_call_bg_selector"
        android:src="@drawable/icon_call_car"/>
</LinearLayout>