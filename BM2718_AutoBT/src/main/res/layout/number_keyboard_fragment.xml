<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_main">

    <LinearLayout
        android:id="@+id/llKeyboard"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="67dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvCallNumber"
            android:layout_width="502dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:background="@drawable/bg_keyboard_number"
            android:ellipsize="start"
            android:gravity="center"
            android:singleLine="true"
            android:textSize="30sp"/>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageButton
                android:id="@+id/ibDelete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="35dp"
                android:background="@drawable/btn_keyboard_delete_selector"
                />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="84dp"
                android:layout_marginTop="18dp"
                android:src="@drawable/icon_keyboard_delete"/>
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/llKeyboard"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="28dp"
        android:orientation="horizontal">

        <GridView
            android:id="@+id/gvKeyboard"
            android:layout_width="502dp"
            android:layout_height="237dp"
            android:horizontalSpacing="34dp"
            android:numColumns="4"
            android:verticalSpacing="28dp"/>

        <ImageButton
            android:id="@+id/ibCall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="34dp"
            android:background="@drawable/btn_keyboard_call_selector"
            android:src="@drawable/icon_keyboard_call"/>

    </LinearLayout>
</RelativeLayout>